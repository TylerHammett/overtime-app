<div class="container">
    <h1>Time Entries</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Date</th>
                <th scope="col">Rationale</th>
                <th scope="col">User</th>
            </tr>
        </thead>
        <tbody>
            <% @posts.each do |post| %>
            <tr>
                <th scope="row"><%= post.id %></th>
                <td><%= post.date %></td>
                <td><%= post.rationale %></td>
                <td><%= post.user.first_name %></td>
            </tr>
            <%end %>
        </tbody>
    </table>
</div>